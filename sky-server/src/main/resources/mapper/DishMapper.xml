<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.DishMapper">

<!--    记得主键返回，用于口味表的录入-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert dish(name,price,status,create_time,update_time,create_user,update_user,category_id, image,description)
        values(#{name},#{price},#{status},#{createTime},#{updateTime},#{createUser},#{updateUser},#{categoryId},#{image},#{description})
    </insert>
    <update id="update">
        update dish
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="price != null">price = #{price},</if>
            <if test="status != null">status = #{status},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="image != null">image = #{image},</if>
            <if test="description != null">description = #{description},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="updateUser != null">update_user = #{updateUser}</if>
        </set>
        where id = #{id}
    </update>
    <select id="pageQuery" resultType="com.sky.vo.DishVO">
        select d.*,c.name categoryName from dish d left join category c on d.category_id = c.id
        <where>
            <if test="name != null and name != ''">
                and d.name like concat('%',#{name},'%')
            </if>
            <if test="categoryId != null">
                and d.category_id = #{categoryId}
            </if>
        </where>
        order by d.update_time desc
    </select>

    <select id="getById" resultType="com.sky.entity.Dish">
        select * from dish where id = #{id}
    </select>

    <delete id="deleteById">
        delete from dish where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from dish where id in
        <foreach  collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>


    <select id="getByCategoryId" resultType="com.sky.entity.Dish">
        select * from dish where category_id = #{categoryId}
    </select>

    <select id="getDishItems" resultType="com.sky.vo.DishItemVO">
        select sd.name, sd.copies, d.image, d.description from setmeal_dish sd left join dish d on sd.dish_id = d.id
        where sd.setmeal_id = #{setmealId}
    </select>

</mapper>
